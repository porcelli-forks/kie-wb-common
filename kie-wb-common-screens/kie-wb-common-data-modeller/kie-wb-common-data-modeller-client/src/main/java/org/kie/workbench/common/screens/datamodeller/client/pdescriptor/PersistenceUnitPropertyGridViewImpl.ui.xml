<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:uf="urn:import:org.uberfire.ext.widgets.common.client.tables">

  <b:Container fluid="true">

    <b:Row>
      <uf:SimpleTable ui:field="dataGrid"/>

      <b:PanelGroup ui:field="accordion">
        <b:Panel>
          <b:PanelHeader dataToggle="COLLAPSE" ui:field="header">
            <b:Heading size="H4" text="New property"/>
          </b:PanelHeader>
          <b:PanelCollapse ui:field="collapse">
            <b:PanelBody>
              <b:FormGroup ui:field="newPropertyControlGroup">
                <b:TextBox ui:field="newPropertyNameTextBox" placeholder="property name"/>
                <b:TextBox ui:field="newPropertyValueTextBox" placeholder="property value"/>
                <b:HelpBlock ui:field="newPropertyHelpInline"/>
              </b:FormGroup>
              <b:Button icon="SAVE" type="PRIMARY" ui:field="addPropertyButton" text="Add"/>
            </b:PanelBody>
          </b:PanelCollapse>

        </b:Panel>
      </b:PanelGroup>
    </b:Row>

  </b:Container>

</ui:UiBinder>
