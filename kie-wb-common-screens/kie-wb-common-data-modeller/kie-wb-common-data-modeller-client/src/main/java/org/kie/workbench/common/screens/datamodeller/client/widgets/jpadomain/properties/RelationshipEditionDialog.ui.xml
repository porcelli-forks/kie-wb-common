<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <g:HTMLPanel>

    <b:FormGroup ui:field="relationControlGroup">
        <b:FormLabel for="relationType"  >Relationship type</b:FormLabel>
        <b:ListBox b:id="relationTypeLabel" ui:field="relationType"></b:ListBox>

        <b:FormLabel for="cascadeAll"  >Cascade mode</b:FormLabel>
        <g:HorizontalPanel>
          <b:CheckBox b:id="cascadeAllLabel" ui:field="cascadeAll" text="All"></b:CheckBox><g:HTML>&nbsp;&nbsp;</g:HTML>
          <b:CheckBox ui:field="cascadePersist"  text="Persist"></b:CheckBox><g:HTML>&nbsp;&nbsp;</g:HTML>
          <b:CheckBox ui:field="cascadeMerge"    text="Merge"></b:CheckBox><g:HTML>&nbsp;&nbsp;</g:HTML>
          <b:CheckBox ui:field="cascadeRemove"   text="Remove"></b:CheckBox><g:HTML>&nbsp;&nbsp;</g:HTML>
          <b:CheckBox ui:field="cascadeRefresh"  text="Refresh"></b:CheckBox><g:HTML>&nbsp;&nbsp;</g:HTML>
          <b:CheckBox ui:field="cascadeDetach"   text="Detach"></b:CheckBox><g:HTML>&nbsp;&nbsp;</g:HTML>
        </g:HorizontalPanel>

        <b:FormLabel for="fetchMode"  >Fetch mode</b:FormLabel>
        <b:ListBox b:id="fetchModeLabel" ui:field="fetchMode"></b:ListBox>

        <b:FormLabel for="optional"  ><span ui:field="optionalLabel">Optional</span></b:FormLabel>
        <b:CheckBox b:id="optionalLabel" ui:field="optional"></b:CheckBox>

        <b:FormLabel for="mappedBy"  ><span ui:field="mappedByLabel">Mapped by</span></b:FormLabel>
        <b:TextBox b:id="mappedByLabel" ui:field="mappedBy" placeholder="field name"/>

        <b:FormLabel for="orphanRemoval"  ><span ui:field="orphanRemovalLabel">Remove Orphans</span></b:FormLabel>
        <b:CheckBox b:id="orphanRemovalLabel" ui:field="orphanRemoval"></b:CheckBox>

        <b:HelpBlock ui:field="relationGroupInline"/>
    </b:FormGroup>

  </g:HTMLPanel>

</ui:UiBinder>
