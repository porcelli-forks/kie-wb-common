<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="i18n" type="org.kie.workbench.common.screens.datamodeller.client.resources.i18n.Constants"/>

    <gwt:HTMLPanel>

        <style>
            .drools-data-object-editor {
            min-height: 400px !Important;
            min-width: 400px !Important;
            overflow: hidden;
            }

            .drools-data-object-editor textarea {
            width: 185px !Important;
            resize: none;
            }

            .drools-data-object-editor select,
            .drools-data-object-editor input {
            width: 185px !Important;
            }

        </style>

        <div class="well drools-data-object-editor">

        <table class="row-fluid"  style="padding: 4px;">

            <tr>
              <td style="white-space: nowrap; vertical-align: top;">
                <gwt:Label ui:field="typeSafeLabel" text="{i18n.objectEditor_typeSafeLabel}"/>
              </td>
              <td style="padding-left: 4px;">
                <b:ListBox ui:field="typeSafeSelector" styleName="col-md-10"></b:ListBox>
              </td>
              <td style="padding-left: 4px;">
                <b:Popover placement="LEFT" trigger="HOVER" title="{i18n.objectEditor_typeSafeLabel}" content="{i18n.objectEditor_typeSafeHelp}" isHtml="true" >
                  <b:Icon ui:field="typeSafeHelpIcon" type="QUESTION"></b:Icon>
                </b:Popover>
              </td>
            </tr>

            <tr>
                <td colspan="3" style="padding: 3px;"></td>
            </tr>
            <tr>
                <td style="white-space: nowrap; vertical-align: top;">
                    <gwt:Label ui:field="classReactiveLabel" text="{i18n.objectEditor_classReactiveLabel}" />
                </td>
                <td style="padding-left: 4px;">
                    <b:CheckBox ui:field="classReactiveSelector"></b:CheckBox>
                </td>
                <td style="padding-left: 4px;">
                    <b:Popover placement="LEFT" trigger="HOVER" title="{i18n.objectEditor_classReactiveLabel}" content="{i18n.objectEditor_classReactiveLabelHelp}">
                        <b:Icon ui:field="classReactiveHelpIcon" type="QUESTION"></b:Icon>
                    </b:Popover>
                </td>
            </tr>
            <tr>
                <td colspan="3" style="padding: 3px;"></td>
            </tr>
            <tr>
                <td style="white-space: nowrap; vertical-align: top;">
                    <gwt:Label ui:field="propertyReactiveLabel" text="{i18n.objectEditor_propertyReactiveLabel}"/>
                </td>
                <td style="padding-left: 4px;">
                    <b:CheckBox ui:field="propertyReactiveSelector"></b:CheckBox>
                </td>
                <td style="padding-left: 4px;">
                    <b:Popover placement="LEFT" trigger="HOVER" title="{i18n.objectEditor_propertyReactiveLabel}" content="{i18n.objectEditor_propertyReactiveLabelHelp}">
                        <b:Icon ui:field="propertyReactiveHelpIcon" type="QUESTION"></b:Icon>
                    </b:Popover>
                </td>
            </tr>
            <tr>
              <td colspan="3" style="padding: 3px;"></td>
            </tr>
            <tr>
              <td style="white-space: nowrap; vertical-align: top;">
                <gwt:Label ui:field="roleLabel" text="{i18n.objectEditor_roleLabel}"/>
              </td>
              <td style="padding-left: 4px;">
                <b:ListBox ui:field="roleSelector" styleName="col-md-10"></b:ListBox>
              </td>
              <td style="padding-left: 4px;">
                <b:Popover placement="LEFT" trigger="HOVER" title="{i18n.objectEditor_roleLabel}" content="{i18n.objectEditor_roleHelp}" >
                  <b:Icon ui:field="roleHelpIcon" type="QUESTION"></b:Icon>
                </b:Popover>
              </td>
            </tr>


            <tr>
              <td colspan="3" style="padding: 3px;"></td>
            </tr>
            <tr>
              <td style="white-space: nowrap; vertical-align: top;">
                <gwt:Label ui:field="timestampLabel" text="{i18n.objectEditor_timestampLabel}"/>
              </td>
              <td style="padding-left: 4px;">
                <b:ListBox ui:field="timestampFieldSelector" styleName="col-md-10"></b:ListBox>
              </td>
              <td style="padding-left: 4px;">
                <b:Popover placement="LEFT" trigger="HOVER" title="{i18n.objectEditor_timestampLabel}" content="{i18n.objectEditor_timestampHelp}" isHtml="true" >
                  <b:Icon ui:field="timestampHelpIcon" type="QUESTION"></b:Icon>
                </b:Popover>
              </td>
            </tr>


            <tr>
              <td colspan="3" style="padding: 3px;"></td>
            </tr>
            <tr>
              <td style="white-space: nowrap; vertical-align: top;">
                <gwt:Label ui:field="durationLabel" text="{i18n.objectEditor_durationLabel}"/>
              </td>
              <td style="padding-left: 4px;">
                <b:ListBox ui:field="durationFieldSelector" styleName="col-md-10"></b:ListBox>
              </td>
              <td style="padding-left: 4px;">
                <b:Popover placement="LEFT" trigger="HOVER" title="{i18n.objectEditor_durationLabel}" content="{i18n.objectEditor_durationHelp}" isHtml="true" >
                  <b:Icon ui:field="durationHelpIcon" type="QUESTION"></b:Icon>
                </b:Popover>
              </td>
            </tr>


            <tr>
              <td colspan="3" style="padding: 3px;"></td>
            </tr>
            <tr>
              <td style="white-space: nowrap; vertical-align: top;">
                <gwt:Label ui:field="expiresLabel" text="{i18n.objectEditor_expiresLabel}"/>
              </td>
              <td style="padding-left: 4px;">
                <b:TextBox ui:field="expires" styleName="col-md-10"></b:TextBox>
              </td>
              <td style="padding-left: 4px;">
                <b:Popover placement="LEFT" trigger="HOVER" title="{i18n.objectEditor_expiresLabel}" content="{i18n.objectEditor_expiresHelp}" isHtml="true" >
                  <b:Icon ui:field="expiresHelpIcon" type="QUESTION"></b:Icon>
                </b:Popover>
              </td>
            </tr>

            <tr>
              <td colspan="3" style="padding: 3px;"></td>
            </tr>
            <tr>
              <td style="white-space: nowrap; vertical-align: top;">
                <gwt:Label ui:field="remotableLabel" text="{i18n.objectEditor_remotableLabel}"/>
              </td>
              <td style="padding-left: 4px;">
                <b:CheckBox ui:field="remotableSelector"></b:CheckBox>
              </td>
              <td style="padding-left: 4px;">
                <b:Popover placement="LEFT" trigger="HOVER" title="{i18n.objectEditor_remotableLabel}" content="{i18n.objectEditor_remotableHelp}" isHtml="true" >
                  <b:Icon ui:field="remotableHelpIcon" type="QUESTION"></b:Icon>
                </b:Popover>
              </td>
            </tr>

        </table>

        </div>
    </gwt:HTMLPanel>

</ui:UiBinder>