<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
    >


  <gwt:VerticalPanel>
    <gwt:HorizontalPanel spacing="5">
        <b:CheckBox text="Persistable" ui:field="persistable"></b:CheckBox>
        <gwt:HTMLPanel>&nbsp;&nbsp;</gwt:HTMLPanel>
        <b:Popover placement="LEFT" trigger="HOVER" title="Persistable" content="A persistable data object will include all the necessary configuration to be stored in a DB.">
          <b:Icon ui:field="persistableHelpIcon" type="QUESTION"></b:Icon>
        </b:Popover>
    </gwt:HorizontalPanel>
  </gwt:VerticalPanel>

</ui:UiBinder>