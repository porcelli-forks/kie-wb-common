<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:bgwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

  <ui:with field="i18n" type="org.kie.workbench.common.screens.datamodeller.client.resources.i18n.Constants"/>

  <gwt:HTMLPanel>

    <style>

      .object-browser-scroll-list {
      height: 460px;
      width: 100%;
      overflow-x:hidden;
      overflow-y: auto;
      relative;
      zoom: 1;
      }

      .object-browser-object-button {
      font-size: 20px;
      }

    </style>


    <gwt:FlowPanel>

      <gwt:HTMLPanel>
        <div style="padding-bottom: 10px;">

          <b:Button ui:field="objectButton" addStyleNames="object-browser-object-button"></b:Button>

          <div style="float:right;">
            <b:Button ui:field="newPropertyButton" text="add field"/>
          </div>

        </div>
      </gwt:HTMLPanel>

      <gwt:FlowPanel styleName="object-browser-scroll-list">
        <gwt:FlowPanel ui:field="containerPanel">
          <bgwt:CellTable ui:field="dataObjectPropertiesTable" styleName="table table-bordered table-striped table-hover"/>
        </gwt:FlowPanel>
      </gwt:FlowPanel>

    </gwt:FlowPanel>

  </gwt:HTMLPanel>

</ui:UiBinder>