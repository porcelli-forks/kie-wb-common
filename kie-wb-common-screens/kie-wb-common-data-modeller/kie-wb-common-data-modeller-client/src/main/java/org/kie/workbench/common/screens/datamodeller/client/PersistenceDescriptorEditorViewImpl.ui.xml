<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <g:HTMLPanel>
    <b:Well>
      <b:FieldSet>

        <!-- persistence unit -->
        <b:FormGroup ui:field="persistenceUnitGroup">
          <b:FormLabel for="persistenceUnit">
            Persistence Unit
          </b:FormLabel>
          <b:TextBox b:id="persistenceUnit" ui:field="persistenceUnitTextBox" addStyleNames="col-md-5" placeholder=""/>
          <b:HelpBlock ui:field="persistenceUnitHelpInline"/>
        </b:FormGroup>

        <!-- persistence provider -->
        <b:FormGroup ui:field="persistenceProviderGroup">
          <b:FormLabel for="persistenceProvider">
            Persistence Provider
          </b:FormLabel>
          <b:TextBox b:id="persistenceProvider" ui:field="persistenceProviderTextBox" addStyleNames="col-md-5"/>
          <b:HelpBlock ui:field="persistenceProviderHelpInline"/>
        </b:FormGroup>

        <!-- data source -->
        <b:FormGroup ui:field="datasourceGroup">
          <b:FormLabel for="datasource">
            Data Source
          </b:FormLabel>
          <b:TextBox b:id="datasource" ui:field="datasourceTextBox" addStyleNames="col-md-5"/>
          <b:HelpBlock ui:field="datasourceHelpInline"/>
        </b:FormGroup>

        <!-- persistence unit -->
        <b:FormGroup ui:field="transactionTypeGroup">
          <b:FormLabel for="transactionType">
            Transactions Type
          </b:FormLabel>
          <b:RadioButton b:id="transactionType" ui:field="transactionTypeRadioButton" name="transactionType" text="JTA"/>
          <b:HelpBlock ui:field="transactionTypeHelpInline"/>
        </b:FormGroup>

        <b:PanelGroup ui:field="accordion1">
          <b:Panel>
            <b:PanelHeader ui:field="header1">
              <b:Heading size="H4" text="Advanced properties"/>
            </b:PanelHeader>
            <b:PanelCollapse b:id="collapseOne" ui:field="collapse1">
              <b:PanelBody ui:field="propertiesGridPanel"/>
            </b:PanelCollapse>
          </b:Panel>
        </b:PanelGroup>

        <b:PanelGroup ui:field="accordion2">
          <b:Panel>
            <b:PanelHeader ui:field="header2">
              <b:Heading size="H4" text="Project persistable Data Objects"/>
            </b:PanelHeader>
            <b:PanelCollapse b:id="collapseOne" ui:field="collapse2">
              <b:PanelBody ui:field="persistenceUnitClassesPanel"/>
            </b:PanelCollapse>
          </b:Panel>
        </b:PanelGroup>

      </b:FieldSet>
    </b:Well>
  </g:HTMLPanel>

</ui:UiBinder>