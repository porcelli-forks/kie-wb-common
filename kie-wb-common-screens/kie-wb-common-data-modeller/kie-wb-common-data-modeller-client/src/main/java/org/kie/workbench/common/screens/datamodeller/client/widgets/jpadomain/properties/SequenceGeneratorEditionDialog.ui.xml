<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    >
  <g:HTMLPanel>

    <b:FormGroup ui:field="generatorControlGroup">

        <b:FormLabel for="generatorName"  >Generator name</b:FormLabel>
        <b:TextBox  b:id="generatorNameLabel" ui:field="generatorName" placeholder=""/>

        <b:FormLabel for="sequenceName"  >Sequence name</b:FormLabel>
        <b:TextBox b:id="sequenceNameLabel" ui:field="sequenceName" placeholder=""/>

        <b:FormLabel for="initialValue"  >Initial value</b:FormLabel>
        <b:TextBox b:id="initialValueLabel" ui:field="initialValue" placeholder=""/>

        <b:FormLabel for="allocationSize"  >Allocation size</b:FormLabel>
        <b:TextBox b:id="allocationSizeLabel" ui:field="allocationSize" placeholder="allocation size"/>

        <b:HelpBlock ui:field="generatorNameInline"/>
    </b:FormGroup>

  </g:HTMLPanel>

</ui:UiBinder>
