<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
        >
    <b:Container fluid="true">
        <b:Row>
            <b:Column size="MD_12">
                <b:Form type="HORIZONTAL">

                    <b:FormGroup>
                        <b:FormLabel for="generatorName" addStyleNames="col-md-3">Generator name</b:FormLabel>
                        <b:Column size="MD_9">
                            <b:TextBox b:id="generatorNameLabel" ui:field="generatorName" placeholder=""/>
                        </b:Column>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel for="sequenceName" addStyleNames="col-md-3">Sequence name</b:FormLabel>
                        <b:Column size="MD_9">
                            <b:TextBox b:id="sequenceNameLabel" ui:field="sequenceName" placeholder=""/>
                        </b:Column>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel for="initialValue" addStyleNames="col-md-3">Initial value</b:FormLabel>
                        <b:Column size="MD_9">
                            <b:TextBox b:id="initialValueLabel" ui:field="initialValue" placeholder=""/>
                        </b:Column>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel for="allocationSize" addStyleNames="col-md-3">Allocation size</b:FormLabel>
                        <b:Column size="MD_9">
                            <b:TextBox b:id="allocationSizeLabel" ui:field="allocationSize" placeholder="allocation size"/>
                        </b:Column>
                    </b:FormGroup>

                </b:Form>
            </b:Column>
        </b:Row>
    </b:Container>

</ui:UiBinder>
