<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>

  <ui:style>
    .margin {
      padding-top: 5px;
    }
  </ui:style>

  <g:FlowPanel>
    <b:FieldSet>
      <b:Container addStyleNames="well" fluid="true">
        <b:Row>
          <b:Column size="MD_5">
            <b:FormGroup ui:field="containerNameGroup">
              <b:TextBox ui:field="containerName" placeholder='Name'/>
            </b:FormGroup>
          </b:Column>
        </b:Row>

        <b:Row>
          <b:Column size="MD_3">
            <b:FormGroup ui:field="groupIdGroup">
              <b:TextBox ui:field="groupId" placeholder='Group Name'/>
            </b:FormGroup>
          </b:Column>
          <b:Column size="MD_4">
            <b:FormGroup ui:field="artifactIdGroup">
              <b:TextBox ui:field="artifactId" placeholder='Artifact Id'/>
            </b:FormGroup>
          </b:Column>
          <b:Column size="MD_4">
            <b:FormGroup ui:field="versionGroup">
              <b:TextBox ui:field="version" placeholder='Version'/>
            </b:FormGroup>
          </b:Column>
          <b:Column size="MD_1">
            <b:Button block="true" ui:field="ok" text="Ok"/>
          </b:Column>
        </b:Row>

        <b:Row>
          <b:Column size="MD_12">
            <b:TextBox ui:field="endpoint" readOnly="true"/>
          </b:Column>
        </b:Row>

      </b:Container>
    </b:FieldSet>

    <b:Container addStyleNames="{style.margin}" fluid="true">
      <b:Row ui:field="content"/>
    </b:Container>
  </g:FlowPanel>

</ui:UiBinder>
