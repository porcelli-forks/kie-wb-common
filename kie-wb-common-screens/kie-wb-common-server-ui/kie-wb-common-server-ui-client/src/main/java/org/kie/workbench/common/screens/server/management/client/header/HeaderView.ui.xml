<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:with field="res" type="org.kie.workbench.common.screens.server.management.client.resources.ContainerResources"/>

  <g:HTMLPanel>
    <div class="{res.CSS.sectionHeader}">

      <div class="{res.CSS.selectionControls}">
        <i class="fa-circle-o {res.CSS.clickable}" title="Clear selection" ui:field="clearSelection"></i>
        <i class="fa-circle {res.CSS.clickable}" title="Select all" ui:field="selectAll"></i>
      </div>

      <div class="{res.CSS.sectionControls}">
        <a title="Create new servers" ui:field="registerArea">
          <i class="fa-bolt {res.CSS.clickable}" ui:field="registerServer"></i> Register
        </a>

        <a title="Update status" ui:field="updateStatusArea">
          <i class="fa-refresh {res.CSS.clickable}"></i> Update status
        </a>

        <a title="Refresh" ui:field="refreshArea">
          <i class="fa-refresh {res.CSS.clickable}"></i> Refresh
        </a>

        <a title="Start containers" ui:field="startArea">
          <i class="fa-play-circle-o {res.CSS.clickable}"></i>
          Start
        </a>
        <a title="Stop containers" ui:field="stopArea">
          <i class="fa-power-off {res.CSS.clickable}"></i>
          Stop
        </a>
        <a class="{res.CSS.navDanger}" title="Delete container" ui:field="deleteArea">
          <i class="fa-minus {res.CSS.clickable}"></i> Delete
        </a>
      </div>

      <div class="{res.CSS.sectionFilter}">
        <input type="text" class="{res.CSS.searchQuery}" ui:field="inputFilter"/>
        <i class="fa-times {res.CSS.iconToRemove} {res.CSS.clickable}" title="Clear filter" ui:field="clearFilter"></i>
      </div>
    </div>

  </g:HTMLPanel>

</ui:UiBinder>
