<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>

  <ui:style>
    .mandatory-field {
      color: #FF0000 !important;
    }
  </ui:style>

  <g:FlowPanel>
    <b:Well>
      <b:FieldSet>
        <b:Legend>
          Server connectivity info.
          <small>
            Is Required
          </small>
        </b:Legend>
        <b:FormGroup ui:field="idGroup">
          <b:FormLabel for="id">
            <span class="{style.mandatory-field}">*</span>
            Identifier
          </b:FormLabel>
          <b:TextBox b:id="url" ui:field="idTextBox" placeholder="Identifier"/>
          <b:HelpBlock ui:field="idHelpInline"/>
        </b:FormGroup>
        <b:FormGroup ui:field="nameGroup">
          <b:FormLabel for="url">
            <span class="{style.mandatory-field}">*</span>
            Name
          </b:FormLabel>
          <b:TextBox b:id="name" ui:field="nameTextBox" placeholder="Name"/>
          <b:HelpBlock ui:field="nameHelpInline"/>
        </b:FormGroup>
        <b:FormGroup ui:field="versionGroup">
          <b:FormLabel for="version">
            Version
          </b:FormLabel>
          <b:TextBox b:id="version" ui:field="versionTextBox" placeholder="Version"/>
          <b:HelpBlock ui:field="versionHelpInline"/>
        </b:FormGroup>
      </b:FieldSet>
    </b:Well>
    <b:ModalFooter>
      <b:Button type="DEFAULT" ui:field="cancel">
        Cancel
      </b:Button>
      <b:Button icon="BOLT" type="PRIMARY" ui:field="connect">
        Connect
      </b:Button>
    </b:ModalFooter>
  </g:FlowPanel>
</ui:UiBinder> 