<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <b:Form type="HORIZONTAL">
    <b:FieldSet>
      <b:FormGroup ui:field="templateNameGroup">
        <b:FormLabel for="templateName" text="Template Name" addStyleNames="col-md-3"/>
        <b:Column size="MD_9">
          <b:TextBox ui:field="templateName"/>
          <b:HelpBlock ui:field="templateNameHelpInline"/>
        </b:Column>
      </b:FormGroup>
    </b:FieldSet>
  </b:Form>

</ui:UiBinder>