<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:bootstrap='urn:import:org.gwtbootstrap3.client.ui'>

  <ui:with field="i18n"
           type="org.kie.workbench.common.screens.projecteditor.client.resources.i18n.ProjectEditorConstants"/>


  <bootstrap:Container>
    <bootstrap:Column size="4">
      <bootstrap:ButtonGroup>
        <bootstrap:Button ui:field="addButton">
          <ui:text from="{i18n.Add}"/>
        </bootstrap:Button>
        <bootstrap:Button ui:field="renameButton" enabled="false">
          <ui:text from="{i18n.Rename}"/>
        </bootstrap:Button>
        <bootstrap:Button ui:field="deleteButton" enabled="false">
          <ui:text from="{i18n.Delete}"/>
        </bootstrap:Button>
        <bootstrap:Button ui:field="makeDefaultButton" enabled="false">
          <ui:text from="{i18n.MakeDefault}"/>
        </bootstrap:Button>
      </bootstrap:ButtonGroup>
      <bootstrap:ListBox ui:field="list" visibleItemCount="15" width="300px"/>
    </bootstrap:Column>
    <bootstrap:Column size="2">
      <gwt:SimplePanel ui:field="kSessionForm"/>
    </bootstrap:Column>
  </bootstrap:Container>

</ui:UiBinder>
