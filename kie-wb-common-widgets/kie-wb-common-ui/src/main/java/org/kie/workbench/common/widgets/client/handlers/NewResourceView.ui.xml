<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:with field="i18n" type="org.kie.workbench.common.widgets.client.resources.i18n.NewItemPopupConstants"/>
  <ui:with field="i18nCommon" type="org.kie.workbench.common.widgets.client.resources.i18n.CommonConstants"/>
  <b:Form type="HORIZONTAL">
    <b:FieldSet>
      <b:FormGroup ui:field="fileNameGroup">
        <b:FormLabel for="fileName" addStyleNames="col-md-3">
          <font color="red">*</font>
          <span ui:field="fileTypeLabel">
            <ui:text from="{i18n.resourceName}"/>
          </span>
        </b:FormLabel>
        <g:FlowPanel addStyleNames="col-md-9">
          <b:TextBox b:id="fileName" ui:field="fileNameTextBox" addStyleNames="col-md-10" placeholder="{i18n.resourceNamePlaceholder}"/>
          <b:HelpBlock ui:field="fileNameHelpInline"/>
        </g:FlowPanel>
      </b:FormGroup>

      <b:FormGroup ui:field="handlerExtensionsGroup">
        <b:FormLabel addStyleNames="col-md-3">
          <ui:text from="{i18n.packageName}"/>
        </b:FormLabel>
        <g:FlowPanel addStyleNames="col-md-9">
          <g:VerticalPanel ui:field="handlerExtensions"/>
        </g:FlowPanel>
      </b:FormGroup>
    </b:FieldSet>
  </b:Form>

</ui:UiBinder>